{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/node_modules/*",
        "**/__tests__/*",
        "**/__mocks__/*",
        "src/**/*.unit.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.apispec.ts",
        "src/**/*.bench.ts"
    ]
}